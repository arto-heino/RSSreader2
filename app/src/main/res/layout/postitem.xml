<?xml version="1.0" encoding="utf-8"?>
    <!-- postitem.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    >

    <ImageView
        android:id="@+id/postThumb"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@mipmap/trash"
        android:scaleType="centerCrop"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/postTitleLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/postThumb"
        android:layout_toRightOf="@id/postThumb"
        android:maxLines="1"
        android:text="Tähän pitäisi saada yksi riviä tekstiä, toivottavasti saadaan se."
        android:textIsSelectable="false"
        android:textSize="16sp"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/postDescLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/postThumb"
        android:maxLines="2"
        android:text="Tähän pitäisi saada kaksi riviä tekstiä, toivottavasti saadaan ne."
        android:textIsSelectable="false"
        android:textSize="13sp"
        android:ellipsize="end"
        android:layout_below="@+id/postTitleLabel"
        android:layout_above="@+id/postDateLabel" />

    <TextView
        android:id="@+id/postDateLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/postThumb"
        android:layout_toRightOf="@id/postThumb"
        android:maxLines="1"
        android:text="Tammikuu 13, 2015"
        android:textSize="10sp"
        />
</RelativeLayout>